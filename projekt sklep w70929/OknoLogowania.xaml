<Window x:Class="Sklep.OknoLogowania"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie - Sklep" Height="495" Width="520"
        Background="#2C2C2C">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Zaloguj się" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20" />
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Login:" Foreground="White" FontSize="16" Margin="0,0,0,5" />
            <TextBox x:Name="txtLogin" Background="#3C3C3C" Foreground="White" FontSize="14" Width="250" Height="30" />
            <TextBlock Text="Hasło:" Foreground="White" FontSize="16" Margin="0,10,0,5" />
            <PasswordBox x:Name="txtHaslo" Background="#3C3C3C" Foreground="White" FontSize="14" Width="250" Height="30" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,277,0,0">
            <Button Content="Zaloguj" Width="120" Height="40" Margin="10" Foreground="White" Background="#2ECC71" Click="BtnZaloguj_Click" />
            <Button Content="Pokaż produkty" Width="200" Height="40" Background="#3498DB" Foreground="White"
                    Click="BtnZalogujJakoKlient_Click" />
            <Button Content="Zamknij" Width="120" Height="40" Margin="10" Background="#E74C3C" Foreground="White"
                    Click="BtnZamknij_Click" />
        </StackPanel>
    </Grid>
</Window>