<Window x:Class="Sklep.Views.PanelPracownika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Pracownika" Height="700" Width="1000" Background="#2C2C2C">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Panel Pracownika" Foreground="White" FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Zarządzanie Produktami" Width="300" Height="50" Margin="10" Background="#3498DB" Foreground="White"
                    FontSize="16" FontWeight="Bold" Click="BtnZarzadzanieProduktami_Click" />
            <Button Content="Zarządzanie Klientami" Width="300" Height="50" Margin="10" Background="#3498DB" Foreground="White"
                    FontSize="16" FontWeight="Bold" Click="BtnZarzadzanieKlientami_Click" />
            <Button Content="Panel Sprzedaży" Width="300" Height="50" Margin="10" Background="#3498DB" Foreground="White"
                    FontSize="16" FontWeight="Bold" Click="BtnPanelSprzedazy_Click" />
            <Button Content="Raport Sprzedaży" Width="300" Height="50" Margin="10" Background="#3498DB" Foreground="White"
                    FontSize="16" FontWeight="Bold" Click="BtnRaportSprzedazy_Click" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Wyloguj" Width="200" Height="50" Margin="10" Background="#E74C3C" Foreground="White"
                    FontSize="16" FontWeight="Bold" Click="BtnWyloguj_Click" />
        </StackPanel>
    </Grid>
</Window>